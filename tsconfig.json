{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "watch": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "lib": ["esnext", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "plugins": [{ "name": "typescript-tslint-plugin", "configFile": "./tslint.json" }]
  },
  "include": ["src/**/*"]
}
